extends layout

block content

  h1(class="text-4xl") #{title}: #{category.name}

  if category_items.length

    p #[strong Delete the following Games before attempting to delete this category.]
    div
      h4 Games:
      dl
        each item in category_items
          dt
            a(href=item.url class="text-blue-700 hover:text-blue-800") #{item.name}

  else
    p Do you really want to delete this Category?

    form(method='POST')
      div.form-group
        input#categoryid.form-control(type='hidden', name='categoryid', value=category._id )

      button(type='submit' class="text-red-600 hover:text-red-800") Delete